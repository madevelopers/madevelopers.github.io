# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.{css,feature,json,html,htm,sh,xhtml,xml,xsl,xspec,yml}]
indent_size = 2

[**.{cmd,bat,ps1}]
indent_size = 2
end_of_line = crlf
insert_final_newline = false

[**.go]
indent_style = tab
